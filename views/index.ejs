<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/main.css">  <!--  custom styles should come last -->
    <title>Welcome to the Photo Album app</title>
</head>
<body>
    <!-- Notification Message -->
    <% if (typeof message !== 'undefined') { %>
    <div style="background-color: lightgreen; padding: 10px; margin-bottom: 20px;">
        <%= message %>
    </div>
    <% } %>

    <h1>Welcome to the Photo Album app</h1>

    <!-- Available Folders Section for user admin -->
    <% if (user.role === 'admin') { %>
    <form action="/create-folder" method="post" style="margin: 20px 0;">
        <input type="text" name="folderName" placeholder="Give A New Folder Name" required>
        <button type="submit" class="my-custom-button">Create Folder</button>
    </form>
    <% } %>

    <div class="folders-section">
        <h5>Available Folders: </h5>
        <ol>
            <% folders.forEach(folder => { %>
                <li><a href="/gallery/<%= folder %>"><%= folder %></a></li>
            <% }) %>
        </ol>
    </div>
</body>
</html>
